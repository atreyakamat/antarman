---
interface Props {
  title: string;
  date: string;
  image: string;
  excerpt: string;
  slug: string;
  author: string;
}

const { title, date, image, excerpt, slug, author } = Astro.props;
---

<a href={`/blogs/${slug}`} class="block">
  <article class="bg-white/10 backdrop-blur-lg rounded-lg p-8 hover:transform hover:scale-105 transition-all duration-300">
    <img 
      src={image}
      alt={title} 
      class="w-full h-64 object-cover rounded-lg mb-6"
    />
    <h2 class="text-3xl font-bold text-white mb-4 hover:text-purple-400 transition-colors">
      {title}
    </h2>
    <p class="text-purple-300 mb-2">{date}</p>
    <p class="text-purple-400 mb-4">By {author}</p>
    <p class="text-gray-200 leading-relaxed">{excerpt}</p>
  </article>
</a>