---
import Layout from '../layouts/HomeLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Particles from "../components/ui/particles.tsx";
import FlickeringGrid from "../components/ui/flickering-grid.tsx";

import ClinicLocations from './homepage/ClinicLocations.astro';
import ClinicSpecialisation from './homepage/ClinicSpecialisation.astro';
import DoctorList from './homepage/DoctorList.astro';
import Services from './homepage/Services.astro';
import Internship from './homepage/Internship.astro';
import MediaSection from './homepage/MediaSection.astro';
import Feedback from './homepage/Feedback.astro';
---

<Layout title="My Astro Project">
  <div class="fixed inset-0 -z-10">
    <Particles
      className="absolute inset-0"
      quantity={500}
      staticity={30}
      ease={50} 
      color="#7E01B3"
      size={2.5}
      ease={50}
      client:load
    />
  </div>
  <div>
    <FlickeringGrid
      className="absolute inset-0"
      squareSize={5}
      gridGap={6}
      flickerChance={0.1}
      color="#FFFFFF"
      maxOpacity={1.8}
      client:load
    />
  </div>

  <Header />
  <main class="container mx-auto p-4 mt-24">
    <section id="hero" class="hero text-white p-8 rounded-lg mb-6">
      <h1 class="text-4xl font-bold">Welcome to My Astro Project</h1>
      <p class="mt-4">This is a simple static site built with Astro and Magic UI.</p>
      <a href="#about" class="btn btn-primary mt-4">Learn More</a>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div class="card bg-base-100 shadow-xl text-white">
        <div class="card-body">
          <ClinicSpecialisation />
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl text-white">
        <div class="card-body">
          <ClinicLocations />
        </div>
      </div>
    </div>

    <section id="about" class="about mb-6 text-white">
      <h2 class="text-3xl font-semibold">About Us</h2>
      <p>This section provides information about the project or organization.</p>
    </section>

    <section id="services" class="services mb-6 text-white">
      <h2 class="text-3xl font-semibold">Our Services</h2>
      <ul class="list-disc pl-5">
        <li>Service 1</li>
        <li>Service 2</li>
        <li>Service 3</li>
      </ul>
    </section>

    <section id="contact" class="contact mb-6 text-white">
      <h2 class="text-3xl font-semibold">Contact Us</h2>
      <p>If you have any questions, feel free to reach out!</p>
    </section>
    
  </main>
  <Footer />
</Layout>