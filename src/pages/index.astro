---
import Layout from '../layouts/HomeLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ParticleBG from "../components/ParticleBG.astro";
import GridBG from "../components/GridBG.astro";

import ClinicLocations from './homepage/ClinicLocations.astro';
import ClinicSpecialisation from './homepage/ClinicSpecialisation.astro';
import DoctorList from './homepage/DoctorList.astro';
import Services from './homepage/Services.astro';
import Internship from './homepage/Internship.astro';
import MediaSection from './homepage/MediaSection.astro';
import Feedback from './homepage/Feedback.astro';
---

<Layout title="My Astro Project">
  <ParticleBG />
  <GridBG />

  <Header />
  <section class="container mx-auto p-4 mt-24">  
    <img src="/seV9PRm.webp" alt="Header image" class="w-full h-auto">
  </section>
  <main class="container mx-auto p-4 mt-24">

    <ClinicLocations />
    <ClinicSpecialisation />

    <section id="about" class="about mb-6">
      <h2 class="text-3xl font-semibold text-[var(--text-primary)]">About Us</h2>
      <p class="text-[var(--text-secondary)]">This section provides information about the project or organization.</p>
    </section>

    <section id="services" class="services mb-6">
      <h2 class="text-3xl font-semibold text-[var(--text-primary)]">Our Services</h2>
      <ul class="list-disc pl-5 text-[var(--text-secondary)]">
        <li>Service 1</li>
        <li>Service 2</li>
        <li>Service 3</li>
      </ul>
    </section>

    <section id="contact" class="contact mb-6">
      <h2 class="text-3xl font-semibold text-[var(--text-primary)]">Contact Us</h2>
      <p class="text-[var(--text-secondary)]">If you have any questions, feel free to reach out!</p>
    </section>
    
  </main>
  <Footer />
</Layout>