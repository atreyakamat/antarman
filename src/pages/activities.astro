---
import Layout from '../layouts/HomeLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ParticleBG from "../components/ParticleBG.astro";
import ShimmerButton from "../components/ui/shimmer-button";
---

<Layout title="Activities | Antarman">
  <ParticleBG />
  <Header />

  <main class="relative">
    <div class="absolute inset-0 bg-gradient-to-b from-purple-900/50 via-purple-800/30 to-transparent"></div>
    <div class="relative z-10">
      <div class="container mx-auto px-6 py-16 text-center md:py-20 lg:px-0 lg:py-28">
        <h1 class="text-5xl font-extrabold leading-tight text-white md:text-6xl lg:text-7xl animate-fade-in">
          Activities
        </h1>
        <p class="mx-auto mt-6 max-w-3xl text-xl text-purple-100 md:text-2xl animate-slide-up">
          Engage in Our Wellness Programs and Workshops
        </p>
      </div>
    </div>
  </main>s

  <div class="container mx-auto px-4">
    <section class="workshops">
      <h2 class="text-4xl font-bold text-white text-center mb-12 relative">
        Our Workshops
        <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-purple-500"></span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Workshop Card 1 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <img src="/workshop1.jpg" alt="Workshop 1" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">MINDFULNESS BASED COGNITIVE THERAPY</h3>
            <p class="text-gray-300 mb-4">An introductory workshop by Prof. Ruth Baer 2nd Nov 2019.  
              Organised in association with Sangath.</p>
            <div class="w-full">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
            </div>
          </div>
        </div>

        <!-- Workshop Card 2 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <img src="/workshop2.jpg" alt="Workshop 2" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Distress to..de-stress</h3>
            <p class="text-gray-300 mb-4">Talk at Dental College 1st Oct 2019.</p>
            <div class="w-full">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
            </div>
          </div>
        </div>

        <!-- Workshop Card 3 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-3 gap-2">
            <img src="/workshop3.jpg" alt="Workshop 3" class="w-full h-48 object-cover">
            <img src="/workshop3-2.jpg" alt="Workshop 3 Second Image" class="w-full h-48 object-cover">
            <img src="/workshop3-3.jpg" alt="Workshop 3 Third Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Session at Kendriya Vidyalaya, Ponda</h3>
            <p class="text-gray-300 mb-4">Sharika Fernandes e Pereira.</p>
          </div>
        </div>

        <!-- Workshop Card 4 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-3 gap-2">
            <img src="/workshop4.jpg" alt="Workshop 4" class="w-full h-48 object-cover">
            <img src="/workshop4-2.jpg" alt="Workshop 4 Second Image" class="w-full h-48 object-cover">
            <img src="/workshop4-3.jpg" alt="Workshop 4 Third Image" class="w-full h-48 object-cover">
            <img src="/workshop4-4.jpg" alt="Workshop 4 Fourth Image" class="w-full h-48 object-cover">
            <img src="/workshop4-5.jpg" alt="Workshop 4 Fifth Image" class="w-full h-48 object-cover">
            <img src="/workshop4-6.jpg" alt="Workshop 4 Sixth Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Work-Life Balance</h3>
            <p class="text-gray-300 mb-4">Learn strategies to maintain a healthy balance between work and personal life.</p>
          </div>
        </div>

        <!-- Workshop Card 5 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-2 gap-2">
            <img src="/workshop5.jpg" alt="Workshop 5" class="w-full h-48 object-cover">
            <img src="/workshop5-2.jpg" alt="Workshop 5 Second Image" class="w-full h-48 object-cover">
            <img src="/workshop5-3.jpg" alt="Workshop 5 Third Image" class="w-full h-48 object-cover">
            <img src="/workshop5-4.jpg" alt="Workshop 5 Fourth Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Emotional Intelligence</h3>
            <p class="text-gray-300 mb-4">Develop your emotional intelligence skills for better relationships and self-awareness.</p>
          </div>
        </div>
      </div>

      <div class="mt-16 max-w-5xl mx-auto">
        <!-- Workshop Card - Learn to help them 2018 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105 mb-12">
          <div class="grid grid-cols-2 gap-2">
            <img src="/learn-2018-1.jpg" alt="Learn to Help Them 2018" class="w-full h-48 object-cover">
            <img src="/learn-2018-2.jpg" alt="Learn to Help Them 2018 Second Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Learn to help them - Series 2018</h3>
            <p class="text-gray-300 mb-4">Expert workshops on helping techniques and methodologies.</p>
            <div class="flex flex-col items-center mt-6">
              <div class="flex space-x-4 mb-3">
                <div class="flex flex-col items-center">
                  <img src="/speaker1-2018.jpg" alt="Dr. Jane Smith" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Jane Smith</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker2-2018.jpg" alt="Prof. John Doe" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Prof. John Doe</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker3-2018.jpg" alt="Dr. Sarah Wilson" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Sarah Wilson</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker4-2018.jpg" alt="Dr. Mike Johnson" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Mike Johnson</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Workshop Card - Learn to help them 2017 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105 mb-12">
          <div class="grid grid-cols-2 gap-2">
            <img src="/learn-2017-1.jpg" alt="Learn to Help Them 2017" class="w-full h-48 object-cover">
            <img src="/learn-2017-2.jpg" alt="Learn to Help Them 2017 Second Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Learn to help them - Series 2017</h3>
            <p class="text-gray-300 mb-4">Foundational workshops on support and assistance techniques.</p>
            <div class="flex flex-col items-center mt-6">
              <div class="flex space-x-4 mb-3">
                <div class="flex flex-col items-center">
                  <img src="/speaker1-2017.jpg" alt="Dr. Emily Brown" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Emily Brown</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker2-2017.jpg" alt="Prof. David Lee" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Prof. David Lee</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker3-2017.jpg" alt="Dr. Lisa Chen" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Lisa Chen</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker4-2017.jpg" alt="Dr. Tom Wilson" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Tom Wilson</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-16 mb-12">
        <h2 class="text-4xl font-bold text-white text-center mb-12 relative">
          Workshop Resources
          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-purple-500"></span>
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Left Column -->
          <div class="space-y-4">
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 1: Mindfulness & Mental Health</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 2: Stress Management Techniques</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 3: Emotional Intelligence</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 4: Mental Health First Aid</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 5: Anxiety Management</ShimmerButton>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-4">
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 6: Depression Awareness</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 7: Work-Life Balance</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 8: Self-Care Practices</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 9: Relationship Building</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 10: Stress Relief Techniques</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 11: Mental Wellness Guide</ShimmerButton>
            </div>
          </div>
        </div>
      </div>
    </section>

    <style>
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      @keyframes slideUp {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }

      .animate-fade-in {
        animation: fadeIn 1s ease-out;
      }

      .animate-slide-up {
        animation: slideUp 1s ease-out;
      }

      .workshop-card {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
    </style>
  </div>

  <Footer />
</Layout>