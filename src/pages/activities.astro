---
import Layout from '../layouts/HomeLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ParticleBG from "../components/ParticleBG.astro";
import GridBG from "../components/GridBG.astro";
import ShimmerButton from "../components/ui/shimmer-button";
---
<Layout title="activities">
    <Header />
    <ParticleBG />
    <GridBG />
    <main class="container mx-auto p-4 mt-24">
        <section class="workshops">
            <h2 class="text-4xl font-bold text-white text-center mb-12 relative">
                Our Workshops
                <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-purple-500"></span>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Workshop Card 1 -->
                <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
                    <img src="/workshop1.jpg" alt="Workshop 1" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-white mb-2">Mental Health Workshop</h3>
                        <p class="text-gray-300 mb-4">A comprehensive workshop on understanding and managing mental health.</p>
                        <div class="w-full">
                            <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
                        </div>
                    </div>
                </div>

                <!-- Workshop Card 2 -->
                <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
                    <img src="/workshop2.jpg" alt="Workshop 2" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-white mb-2">Stress Management</h3>
                        <p class="text-gray-300 mb-4">Learn effective techniques for managing stress in daily life.</p>
                        <div class="w-full">
                            <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
                        </div>
                    </div>
                </div>

                <!-- Workshop Card 3 -->
                <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
                    <img src="/workshop3.jpg" alt="Workshop 3" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-white mb-2">Mindfulness Practice</h3>
                        <p class="text-gray-300 mb-4">Discover the power of mindfulness and meditation techniques.</p>
                        <div class="w-full">
                            <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <style>
            .workshop-card {
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
                border: 1px solid rgba(255, 255, 255, 0.1);
            }
        </style>
    </main>
    <Footer />
</Layout>