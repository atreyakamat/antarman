---
import Layout from '../layouts/HomeLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ParticleBG from "../components/ParticleBG.astro";
import ShimmerButton from "../components/ui/shimmer-button";
---

<Layout title="Activities | Antarman">
  <ParticleBG />
  <Header />

  <main class="relative">
    <div class="absolute inset-0 bg-gradient-to-b from-purple-900/50 via-purple-800/30 to-transparent"></div>
    <div class="relative z-10">
      <div class="container mx-auto px-6 py-16 text-center md:py-20 lg:px-0 lg:py-28">
        <h1 class="text-5xl font-extrabold leading-tight text-white md:text-6xl lg:text-7xl animate-fade-in">
          Activities
        </h1>
        <p class="mx-auto mt-6 max-w-3xl text-xl text-purple-100 md:text-2xl animate-slide-up">
          Engage in Our Wellness Programs and Workshops
        </p>
      </div>
    </div>
  </main>s

  <div class="container mx-auto px-4">
    <section class="workshops">
      <h2 class="text-4xl font-bold text-white text-center mb-12 relative">
        Our Workshops
        <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-purple-500"></span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Workshop Card 1 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-2 gap-4 p-4">
            <img src="../scraped-images/Mindfullness1.jpeg" alt="Workshop 1" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Mindfulness 5.jpeg" alt="Workshop 1 Second Image" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Mindfulness3.jpeg" alt="Workshop 1 Third Image" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Mindfulness7.jpeg" alt="Workshop 1 Fourth Image" class="w-full h-70 object-contain rounded-lg">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">MINDFULNESS BASED COGNITIVE THERAPY</h3>
            <p class="text-gray-300 mb-4">An introductory workshop by Prof. Ruth Baer 2nd Nov 2019.  
              Organised in association with Sangath.</p>
            <div class="w-full">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
            </div>
          </div>
        </div>

        <!-- Workshop Card 2 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-2 gap-4 p-4">
            <img src="../scraped-images/Distress1.jpeg" alt="Workshop 2" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Distress2.jpeg" alt="Workshop 2 Second Image" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Distress3.jpeg" alt="Workshop 2 Third Image" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Distress4.jpeg" alt="Workshop 2 Fourth Image" class="w-full h-70 object-contain rounded-lg">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Distress to..de-stress</h3>
            <p class="text-gray-300 mb-4">Talk at Dental College 1st Oct 2019.</p>
            <div class="w-full">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Resources</ShimmerButton>
            </div>
          </div>
        </div>

        <!-- Workshop Card 3 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-3 gap-2">
            <img src="../scraped-images/Kendriya2.jpeg" alt="Workshop 3" class="w-full h-48 object-cover">
            <img src="../scraped-images/Kendriya22.jpeg" alt="Workshop 3 Second Image" class="w-full h-48 object-cover">
            <img src="../scraped-images/Kendriya3.jpeg" alt="Workshop 3 Third Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Session at Kendriya Vidyalaya, Ponda</h3>
            <p class="text-gray-300 mb-4">Sharika Fernandes e Pereira.</p>
          </div>
        </div>

        <!-- Workshop Card 4 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-2 gap-2">
            <img src="../scraped-images/MES1.jpeg" alt="Workshop 4" class="w-full h-48 object-cover">
            <img src="../scraped-images/MES2.jpeg" alt="Workshop 4 Second Image" class="w-full h-48 object-cover">
            <img src="../scraped-images/MES3.jpeg" alt="Workshop 4 Third Image" class="w-full h-48 object-cover">
            <img src="../scraped-images/MES4.jpeg" alt="Workshop 4 Fourth Image" class="w-full h-48 object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Workshops at MES College</h3>
            <p class="text-gray-300 mb-4">Sharika Fernandes e Pereira, Samir Walavalkar, Tanushri Sharma, Preetha Mathew, Sifti Bajwa
            </p>
          </div>
        </div>

        <!-- Workshop Card 5 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105">
          <div class="grid grid-cols-2 gap-4 p-4">
            <img src="../scraped-images/Stress1.jpeg" alt="Workshop 5" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Stress2.jpeg" alt="Workshop 5 Second Image" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Stress3.jpeg" alt="Workshop 5 Third Image" class="w-full h-70 object-contain rounded-lg">
            <img src="../scraped-images/Stress4.jpeg" alt="Workshop 5 Fourth Image" class="w-full h-70 object-contain rounded-lg">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">CORPORATE WORKSHOP: Mental Health at Workplace
            </h3>
            <p class="text-gray-300 mb-4">Stress Management for employees</p>
            <p class="text-gray-300 mb-4">Organisation: ORIENTAL CONTAINERS, KUNDAIM</p>
            <p class="text-gray-300 mb-4">Resources Persons: Preetha Mathew, Sharika Fernandes e Pereira</p>
          </div>
        </div>
      </div>

      <div class="mt-16 max-w-5xl mx-auto">
        <!-- Workshop Card - Learn to help them 2018 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105 mb-12">
          <div class="grid grid-cols-2 gap-2">
            <img src="../scraped-images/20181.jpg" alt="Learn to Help Them 2018" class="w-full h-auto object-contain">
            <img src="../scraped-images/20182.png" alt="Learn to Help Them 2018 Second Image" class="w-full h-auto object-contain">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Learn to help them - Series 2018</h3>
            <p class="text-gray-300 mb-4">Expert workshops on helping techniques and methodologies.</p>
            <div class="flex flex-col items-center mt-6">
              <div class="flex space-x-4 mb-3">
                <div class="flex flex-col items-center">
                  <img src="/speaker1-2018.jpg" alt="Dr. Jane Smith" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Marita Adam</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker2-2018.jpg" alt="Prof. John Doe" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Purva Mandalik</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker3-2018.jpg" alt="Dr. Sarah Wilson" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Aileen D'Souza</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker4-2018.jpg" alt="Dr. Mike Johnson" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Ravindra Agarwal</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Workshop Card - Learn to help them 2017 -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105 mb-12">
          <div class="grid grid-cols-2 gap-2">
            <img src="../scraped-images/20171.png" alt="Learn to Help Them 2017" class="w-full h-auto object-contain">
            <img src="../scraped-images/20172.png" alt="Learn to Help Them 2017 Second Image" class="w-full h-auto object-contain">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">Learn to help them - Series 2017</h3>
            <p class="text-gray-300 mb-4">Foundational workshops on support and assistance techniques.</p>
            <div class="flex flex-col items-center mt-6">
              <div class="flex space-x-4 mb-3">
                <div class="flex flex-col items-center">
                  <img src="/speaker1-2017.jpg" alt="Dr. Emily Brown" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Marita Adam</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker2-2017.jpg" alt="Prof. David Lee" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Purva Mandalik</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker3-2017.jpg" alt="Dr. Lisa Chen" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Aileen D'Souza</span>
                </div>
                <div class="flex flex-col items-center">
                  <img src="/speaker4-2017.jpg" alt="Dr. Tom Wilson" class="w-16 h-16 rounded-full object-cover mb-2">
                  <span class="text-sm text-gray-300">Dr. Ravindra Agarwal</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-16 mb-12">
        <h2 class="text-4xl font-bold text-white text-center mb-12 relative">
          Workshop Resources
          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-purple-500"></span>
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Left Column -->
          <div class="space-y-4">
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 1: Mindfulness & Mental Health</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 2: Stress Management Techniques</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 3: Emotional Intelligence</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 4: Mental Health First Aid</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 5: Anxiety Management</ShimmerButton>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-4">
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 6: Depression Awareness</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 7: Work-Life Balance</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 8: Self-Care Practices</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 9: Relationship Building</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 10: Stress Relief Techniques</ShimmerButton>
            </div>
            <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
              <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px" className="w-full">Workshop 11: Mental Wellness Guide</ShimmerButton>
            </div>
          </div>
        </div>
      </div>

      <!-- CICP Card -->
      <div class="mt-16 max-w-5xl mx-auto">
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105 mb-12">
          <div class="relative">
            <img src="../scraped-images/CICP.jpg" alt="CICP Workshop" class="w-full object-contain">
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-semibold text-white mb-4">Counselling in Clinical Practice (CICP)</h3>
            <p class="text-gray-300 mb-6">A comprehensive workshop series focusing on practical counselling techniques and their application in clinical settings.</p>
            
            <!-- Speaker 1 -->
            <div class="mb-6">
              <h4 class="text-xl text-white mb-3">Dr. Sarah Johnson</h4>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Lecture 1: Introduction</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Lecture 2: Methods</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Lecture 3: Case Studies</ShimmerButton>
              </div>
            </div>

            <!-- Speaker 2 -->
            <div class="mb-6">
              <h4 class="text-xl text-white mb-3">Prof. Michael Chen</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Session 1: Techniques</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Session 2: Practice</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Session 3: Applications</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Session 4: Advanced Topics</ShimmerButton>
              </div>
            </div>

            <!-- Speaker 3 -->
            <div class="mb-6">
              <h4 class="text-xl text-white mb-3">Dr. Emily Roberts</h4>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Module 1: Foundations</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Module 2: Assessment</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Module 3: Intervention</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Module 4: Ethics</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Module 5: Research</ShimmerButton>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Module 6: Integration</ShimmerButton>
              </div>
            </div>
          </div>
        </div>

        <!-- Public Talks Card -->
        <div class="workshop-card bg-purple-900/30 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:transform hover:scale-105 mb-12">
          <div class="p-6">
            <h3 class="text-2xl font-semibold text-white mb-4">Public Talks</h3>
            <p class="text-gray-300 mb-6">A series of enlightening talks on mental health awareness and well-being, delivered by leading experts in the field.</p>
            
            <div class="space-y-4">
              <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
                <h4 class="text-white mb-2">Understanding Anxiety in Modern Times</h4>
                <p class="text-gray-300 mb-3">By Dr. Rachel Thompson</p>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Lecture</ShimmerButton>
              </div>

              <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
                <h4 class="text-white mb-2">Mental Health in the Workplace</h4>
                <p class="text-gray-300 mb-3">By Prof. David Anderson</p>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Lecture</ShimmerButton>
              </div>

              <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
                <h4 class="text-white mb-2">Building Resilience in Children</h4>
                <p class="text-gray-300 mb-3">By Dr. Maria Garcia</p>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Lecture</ShimmerButton>
              </div>

              <div class="bg-purple-900/30 p-4 rounded-lg backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/40 transition-all">
                <h4 class="text-white mb-2">Digital Age and Mental Health</h4>
                <p class="text-gray-300 mb-3">By Dr. James Wilson</p>
                <ShimmerButton client:load shimmerColor="#F5EDF0" background="#7E01B3" shimmerDuration="2.5s" shimmerSize="2.5px">Download Lecture</ShimmerButton>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <style>
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      @keyframes slideUp {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }

      .animate-fade-in {
        animation: fadeIn 1s ease-out;
      }

      .animate-slide-up {
        animation: slideUp 1s ease-out;
      }

      .workshop-card {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
    </style>
  </div>

  <Footer />
</Layout>