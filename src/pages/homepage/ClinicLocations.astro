---
const locations = [
  {
    name: "Main Branch",
    address: "123 Healthcare Avenue, Medical District",
    phone: "+1 (555) 123-4567",
    hours: "Mon-Fri: 9AM-6PM, Sat: 9AM-2PM",
    image: "/images/main-clinic.jpg"
  },
  {
    name: "Downtown Clinic", 
    address: "456 Central Street, Downtown",
    phone: "+1 (555) 234-5678",
    hours: "Mon-Fri: 8AM-8PM, Sat-Sun: 10AM-4PM",
    image: "/images/downtown-clinic.jpg"
  },
  {
    name: "Westside Location",
    address: "789 West Boulevard, Westside",
    phone: "+1 (555) 345-6789", 
    hours: "Mon-Sat: 9AM-5PM",
    image: "/images/west-clinic.jpg"
  }
];
---

<section class="py-12 px-4">
  <h2 class="text-3xl font-bold text-center text-white mb-8">Our Clinic Locations</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
    {locations.map((location) => (
      <div class="bg-white/10 backdrop-blur-lg rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 overflow-hidden">
          <img 
            src={location.image} 
            alt={`${location.name} building`}
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-white mb-2">{location.name}</h3>
          <div class="space-y-2 text-gray-200">
            <p class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {location.address}
            </p>
            <p class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {location.phone}
            </p>
            <p class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {location.hours}
            </p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
