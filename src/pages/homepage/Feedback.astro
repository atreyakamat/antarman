---
import Marquee from "@/components/ui/marquee"
import ShineBorder from "../../components/ui/shine-border"
---
<div class="relative">
  <div class="absolute left-0 w-32 h-full z-10 bg-gradient-to-r from-black to-transparent pointer-events-none"></div>
  <div class="absolute right-0 w-32 h-full z-10 bg-gradient-to-l from-black to-transparent pointer-events-none"></div>
  <Marquee class="p-4" pauseOnHover reverse fade fadeWidth={200}>
    <div class="flex space-x-4">
      {[
        { color: 'red-300', text: "Epic Website BTW", user: "Aryan" },
        { color: 'green-300', text: "I had an amazing experience, thank you!", user: "User456" },
        { color: 'yellow-300', text: "The team was very helpful and attentive.", user: "User789" },
        { color: 'purple-300', text: "Loved the atmosphere, highly recommend!", user: "User101" },
        { color: 'orange-300', text: "Fantastic experience, will return!", user: "User202" },
        { color: 'pink-300', text: "The staff was incredibly friendly!", user: "User303" },
        { color: 'teal-300', text: "A wonderful place to relax and unwind.", user: "User404" },
        { color: 'indigo-300', text: "I felt very welcomed and valued.", user: "User505" },
        { color: 'gray-300', text: "POG website design", user: "Aryan" },
        { color: 'brown-300', text: "An unforgettable experience, thank you!", user: "User707" },
      ].map(({ color, text, user }) => (
        <ShineBorder borderRadius={12} borderWidth={2} duration={10} color="#ffffff" className="w-64 bg-[#603A88] hover:bg-[#7E01B3] transition-colors duration-300 text-white">
          <div class="flex flex-col gap-2">
            <div class="flex flex-row items-center gap-2">
              <div class={`w-10 h-10 rounded-full bg-${color} mr-4`}></div>
              <div class="flex flex-col">
                <p class="text-sm text-gray-200">- {user}</p>
              </div>
            </div>
            <blockquote class="text-sm text-gray-100">"{text}"</blockquote>
          </div>
        </ShineBorder>
      ))}
    </div>
  </Marquee>
</div>

