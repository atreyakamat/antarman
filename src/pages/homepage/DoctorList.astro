---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

type DoctorEntry = CollectionEntry<'doctors'>;

let doctors: DoctorEntry[] = [];

try {
  doctors = await getCollection('doctors');
  console.log(`Successfully loaded ${doctors.length} doctors`);
} catch (error) {
  console.error("Error fetching doctors:", error instanceof Error ? error.message : String(error));
}
---

<section class="relative py-24 doctor-section" aria-labelledby="doctors-heading">
  <!-- Enhanced background with more visible purple gradients -->
  <div class="absolute inset-0 bg-gradient-to-b from-purple-900/30 via-[#603A88]/15 to-transparent pointer-events-none"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-[#7E01B3]/15 via-transparent to-[#7E01B3]/15 pointer-events-none"></div>
  
  <!-- Background glow effects -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-700/10 rounded-full blur-[100px] pointer-events-none" aria-hidden="true"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-[#7E01B3]/10 rounded-full blur-[100px] pointer-events-none" aria-hidden="true"></div>
  
  <!-- Subtle particle-like dots -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="dots-pattern"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <h2 id="doctors-heading" class="text-4xl font-bold text-center mb-16 text-white">Our Medical Team</h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {doctors.map((doctor) => (
        <article class="group flex flex-col items-center relative">
          <div class="w-48 h-48 overflow-hidden rounded-full mx-auto mb-4 border-4 border-[#333] group-hover:border-purple-500/50 transition-all duration-300 shadow-lg shadow-purple-900/20">
            <img
              src={doctor.data.image || "/images/default-doctor.webp"}
              alt={`Dr. ${doctor.data.name} - ${doctor.data.specialty || 'Medical Professional'}`}
              width="192"
              height="192"
              loading="lazy"
              decoding="async"
              class="w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <h3 class="text-xl font-semibold text-white text-center mb-1">
            {doctor.data.name}
          </h3>
          <p class="text-purple-200 text-center mb-2">
            {doctor.data.qualification}
          </p>
          {doctor.data.specialty && (
            <p class="text-sm text-gray-400 text-center">
              {doctor.data.specialty}
            </p>
          )}
          {doctor.data.description && (
            <p class="mt-2 text-sm text-gray-300 text-center max-w-xs mx-auto">
              {doctor.data.description}
            </p>
          )}
          
          {doctor.data.detailedInfo && (
            <button
              class="mt-3 text-xs text-purple-400 hover:text-purple-300 transition-colors cursor-pointer doctor-details-trigger group-hover:underline focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-transparent rounded px-2 py-1"
              data-doctor-id={doctor.id}
              aria-label={`View detailed profile for Dr. ${doctor.data.name}`}
            >
              View Profile
            </button>
          )}
        </article>
      ))}
    </div>
  </div>
  
  <!-- Detail modals with improved accessibility -->
  {doctors.filter(d => d.data.detailedInfo).map(doctor => (
    <div
      id={`doctor-modal-${doctor.id}`}
      class="fixed inset-0 z-50 flex items-center justify-center bg-black/70 backdrop-blur-md hidden"
      role="dialog"
      aria-modal="true"
      aria-labelledby={`doctor-modal-title-${doctor.id}`}
    >
      <div class="bg-[#1a1a1a] border border-[#333] rounded-xl max-w-3xl w-full max-h-[80vh] overflow-y-auto m-4 shadow-xl shadow-purple-900/30">
        <div class="flex justify-between items-center border-b border-[#333] p-6 bg-gradient-to-r from-purple-900/20 to-[#603A88]/20">
          <h3 id={`doctor-modal-title-${doctor.id}`} class="text-xl font-semibold text-white">
            {doctor.data.name}, {doctor.data.qualification}
          </h3>
          <button
            class="text-gray-400 hover:text-white modal-close-btn focus:outline-none focus:ring-2 focus:ring-purple-400 rounded p-1"
            data-modal-id={`doctor-modal-${doctor.id}`}
            aria-label="Close modal"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        
        <div class="p-6">
          <div class="flex flex-col md:flex-row gap-8">
            <div class="w-full md:w-1/3">
              <img
                src={doctor.data.image || "/images/default-doctor.webp"}
                alt={`Dr. ${doctor.data.name}`}
                width="300"
                height="300"
                loading="lazy"
                decoding="async"
                class="w-full aspect-square object-cover object-center rounded-lg border border-[#333] shadow-md shadow-purple-900/10"
              />
              
              {doctor.data.specialty && (
                <div class="mt-4">
                  <h4 class="text-sm font-medium text-gray-400">Specialty</h4>
                  <p class="text-purple-300">{doctor.data.specialty}</p>
                </div>
              )}
              
              {doctor.data.detailedInfo?.languages && (
                <div class="mt-4">
                  <h4 class="text-sm font-medium text-gray-400">Languages</h4>
                  <p class="text-white">{doctor.data.detailedInfo.languages}</p>
                </div>
              )}
              
              {doctor.data.detailedInfo?.contact && (
                <div class="mt-4">
                  <h4 class="text-sm font-medium text-gray-400">Contact</h4>
                  <p class="text-white">{doctor.data.detailedInfo.contact}</p>
                </div>
              )}
            </div>
            
            <div class="w-full md:w-2/3">
              {doctor.data.detailedInfo?.about && (
                <section class="mb-6">
                  <h4 class="text-lg font-medium text-white mb-2">About</h4>
                  <p class="text-gray-300 whitespace-pre-line">
                    {doctor.data.detailedInfo.about}
                  </p>
                </section>
              )}
              
              {doctor.data.detailedInfo?.qualifications && (
                <section class="mb-6">
                  <h4 class="text-lg font-medium text-white mb-2">Qualifications</h4>
                  <p class="text-gray-300 whitespace-pre-line">
                    {doctor.data.detailedInfo.qualifications}
                  </p>
                </section>
              )}
              
              {doctor.data.detailedInfo?.services && (
                <section class="mb-6">
                  <h4 class="text-lg font-medium text-white mb-2">Services</h4>
                  <p class="text-gray-300 whitespace-pre-line">
                    {doctor.data.detailedInfo.services}
                  </p>
                </section>
              )}
              
              {doctor.data.detailedInfo?.availability && (
                <section>
                  <h4 class="text-lg font-medium text-white mb-2">Availability</h4>
                  <p class="text-gray-300 whitespace-pre-line">
                    {doctor.data.detailedInfo.availability}
                  </p>
                </section>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  ))}

  <script>
    // Modal functionality with improved performance
    document.addEventListener('DOMContentLoaded', () => {
      // Use event delegation for better performance
      document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        
        // Handle modal open
        if (target.classList.contains('doctor-details-trigger')) {
          e.preventDefault();
          const doctorId = target.getAttribute('data-doctor-id');
          const modal = document.getElementById(`doctor-modal-${doctorId}`);
          if (modal) {
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            // Focus management for accessibility
            modal.focus();
          }
        }
        
        // Handle modal close
        if (target.classList.contains('modal-close-btn')) {
          const modalId = target.getAttribute('data-modal-id');
          const modal = document.getElementById(modalId!);
          if (modal) {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
          }
        }
        
        // Close modal when clicking outside
        if (target.id && target.id.startsWith('doctor-modal-')) {
          target.classList.add('hidden');
          document.body.style.overflow = '';
        }
      });
      
      // Close with escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          document.querySelectorAll('[id^="doctor-modal-"]:not(.hidden)').forEach(modal => {
            (modal as HTMLElement).classList.add('hidden');
            document.body.style.overflow = '';
          });
        }
      });
    });
  </script>
</section>

<style>
  /* Optimized CSS with reduced redundancy */
  .doctor-section {
    position: relative;
    background-color: rgba(25, 15, 35, 0.3);
    margin: 2rem 0;
    border-radius: 1rem;
    overflow: hidden;
  }
  
  .doctor-section::before,
  .doctor-section::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 150px;
    pointer-events: none;
  }
  
  .doctor-section::before {
    top: 0;
    background: linear-gradient(to bottom, 
      rgba(126, 1, 179, 0.2) 0%, 
      rgba(96, 58, 136, 0.1) 50%,
      transparent 100%);
  }
  
  .doctor-section::after {
    bottom: 0;
    background: linear-gradient(to top, 
      rgba(126, 1, 179, 0.2) 0%, 
      rgba(96, 58, 136, 0.1) 50%,
      transparent 100%);
  }

  .dots-pattern {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(#7E01B3 1px, transparent 1px),
      radial-gradient(#603A88 1px, transparent 1px);
    background-size: 50px 50px;
    background-position: 0 0, 25px 25px;
    opacity: 0.05;
  }

  .group:hover .w-48 {
    box-shadow: 0 10px 25px -5px rgba(126, 1, 179, 0.3);
  }

  /* Reduced motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .group:hover .w-48,
    .group:hover img {
      transform: none;
    }
    
    .bg-gradient-to-r {
      animation: none;
    }
  }

  @keyframes pulse-bg {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: pulse-bg 15s ease infinite;
  }
</style>
