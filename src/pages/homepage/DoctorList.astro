<style>
  .doctor-card {
    position: relative;
    width: 100%;
    max-width: 300px;
    height: 450px; /* Increased height from 400px to 450px */
    background-color: #631D76;
    margin: 10px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.3s ease, filter 0.3s ease;
    cursor: pointer;
    opacity: 0.9;
    overflow: hidden;
    z-index: 1;
  }

  .doctor-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: -75%;
    width: 50%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    transform: skewX(-25deg);
    transition: left 0.3s ease;
  }

  .doctor-card:hover::after {
    left: 100%;
  }

  .doctor-card:hover {
    transform: scale(1);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    opacity: 1;
    z-index: 2;
  }

  .doctor-list:hover .doctor-card {
    opacity: 0.7;
    filter: blur(2px);
  }

  .doctor-list:hover .doctor-card:hover {
    opacity: 1;
    filter: none;
  }

  .doctor-list {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin: 0;
  }

  .doctor-image {
    width: 100%;
    height: 60%;
    object-fit: cover;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
  }

  .doctor-info {
    padding: 10px;
    position: relative;
  }

  .doctor-extra-info {
    display: none;
    padding: 10px;
    background-color: #fff;
    border-radius: 0 0 15px 15px;
  }

  .doctor-card:hover .doctor-extra-info {
    display: block;
  }

  .view-more-button {
    display: block;
    margin: 5px auto;
    padding: 5px 10px;
    background-color: #631D76;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
    position: absolute;
    top: 10px;
    right: 10px;
    transition: opacity 0.3s ease;
    font-size: 0.8rem;
  }

  .doctor-card:hover .view-more-button {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .view-more-button {
      display: block;
    }
  }

  h1 {
    text-align: center;
    font-size: x-large;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .doctor-card {
      max-width: 100%;
      height: auto;
    }
  }

  @media (max-width: 768px) {
    .doctor-card.active .doctor-extra-info {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const doctorCards = document.querySelectorAll('.doctor-card');
    doctorCards.forEach(card => {
      card.addEventListener('click', () => {
        card.classList.toggle('active');
      });
    });
  });
</script>

